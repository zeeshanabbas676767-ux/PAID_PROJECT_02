@model PAID_PROJECT_02.Models.Sch_Students
@{
    ViewBag.Title = "Sch_Students";
}
<h1 style="font-size:20px;font-weight:500;color:red"><i class="fa fa-warning"></i> Are you sure you want to delete?</h1>
<div>
    <div class="row g-3" style="display:flex">
        <dl class="col-md-2">
            <dt class="col-sm-3"><strong>Student_Id</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Student_Id)</dd>

            <dt class="col-sm-3 mt-4"><strong>Student_Name</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Student_Name)</dd>

            <dt class="col-sm-3 mt-4"><strong>Address</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>
        </dl>
        <dl class="col-md-2" style="margin-left:50px">
            <dt class="col-sm-3"><strong>City</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.City)</dd>

            <dt class="col-sm-3 mt-4"><strong>Country</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Country)</dd>

            <dt class="col-sm-3 mt-4"><strong>Email</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
        </dl>
        <dl class="col-md-2" style="margin-left:50px">
            <dt class="col-sm-3"><strong>Phone</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>

            <dt class="col-sm-3 mt-4"><strong>Mobile</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Mobile)</dd>

            <dt class="col-sm-3 mt-4"><strong>Enrollment_Date</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Enrollment_Date)</dd>
        </dl>
        <dl class="col-md-2" style="margin-left:50px">
            <dt class="col-sm-3"><strong>Active</strong></dt>
            <dd class="col-sm-9" style="color:black">@Html.DisplayFor(model => model.Active)</dd>

            <dt class="col-sm-3 mt-4"><strong>Deleted</strong></dt>
            <dd class="col-sm-9" style="color:black">@Html.DisplayFor(model => model.Deleted)</dd>

            <dt class="col-sm-3 mt-4"><strong>CreatedBy</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedBy)</dd>
        </dl>
        <dl class="col-md-2" style="margin-left:50px">
            <dt class="col-sm-3"><strong>CreatedDate</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedDate)</dd>

            <dt class="col-sm-3 mt-4"><strong>UpdatedBy</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdatedBy)</dd>

            <dt class="col-sm-3 mt-4"><strong>UpdatedDate</strong></dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdatedDate)</dd>
        </dl>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row g-3 mt-4">
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="px-4 py-2 rounded-lg bg-red-500 text-white font-semibold " style="cursor:pointer;transform:scale(0.9)" />
                @Html.ActionLink("Back", "Index", null, new { @class = "px-4 py-2 rounded-lg bg-black/50 border border-white/20 text-white font-semibold" })
            </div>
        </div>
    }
</div>

